# -*- muttrc -*-
#
# Account setup
#

### Alternates
alternates "redondos@gmail.com|aolivera@gmail.com|redondos@redondos.biz|\
redondos@myrealbox.com|redondos@lugmen.org.ar|aolivera@hotpop.com|\
redondos@twat.com.ar|aolivera@twat.com.ar|redondos@aolivera.com.ar|\
aolivera@aolivera.com.ar|angelo@nc-company.com|a(ngelo|olivera)@ncomputing.com|\
olivera@telmate.com|aolivera@telmate.com|\
aolivera@mongodb.com|aolivera@10gen.com|angelo.olivera@mongodb.com|angelo.olivera@10gen.com"
set reverse_name=yes
set reverse_realname=no

### Folders
set spoolfile="/dev/null"
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/messages
set my_mask=$mask
# set mask="!^\.[^.]"

### Options
set beep_new
# set query_command=muttquery.py
# set query_command="lbdbq %s"
set query_command="~/.mutt/scripts/goobook/contactos.py"

### IMAP
#unset imap_passive
set maildir_header_cache_verify=yes
set maildir_trash=yes
set imap_idle=yes 			# May cause FAM to hog the CPU when
					# monitoring maildirs with thousands of messages.
set mail_check=120
set imap_keepalive=300
set timeout=10
unset imap_check_subscribed

### IMAP accounts

## Generic
account-hook	.	'set imap_authenticators="cram-md5:gssapi:cram-sha256:cram-sha1:login"'

## redondos@twat.com.ar
account-hook	imap://.*twat.com.ar	'set imap_user=redondos imap_pass=`~/.mutt/scripts/imap_password.sh`'
#account-hook	.	'unset smtp_authenticators smtp_pass smtp_url'

## redondos@lugmen.org.ar
account-hook	imaps://mother.lugmen.org.ar	'set imap_user=redondos imap_pass=`~/.mutt/scripts/imap_password.sh redondos@lugmen.org.ar`'
account-hook	imaps://mother.lugmen.org.ar	'set imap_authenticators="login"'
# account-hook	imap://lugmen.org.ar	'smtp_pass=`~/.mutt/scripts/imap_password.sh lugmen` smtp_url=smtps://redondos@lugmen.org.ar:25'

## aolivera@gmail.com
account-hook	imaps://aolivera@imap.gmail.com	'set imap_user=aolivera@gmail.com imap_pass="`/usr/bin/security -q find-internet-password -g -a aolivera@gmail.com -s imap.gmail.com -w`"
account-hook	imaps://aolivera@imap.gmail.com	'set smtp_url=smtp://aolivera@smtp.gmail.com:587 smtp_pass="`/usr/bin/security -q find-internet-password -g -a aolivera@gmail.com -s imap.gmail.com -w`"

## redondos@gmail.com
account-hook	imaps://redondos@imap.gmail.com	'set imap_user=redondos@gmail.com imap_pass="`/usr/bin/security -q find-internet-password -g -a redondos@gmail.com -s imap.gmail.com -w`"

## MongoDB
account-hook  imaps://imap.gmail.com 'set imap_user=angelo.olivera@10gen.com imap_pass="`/usr/bin/security -q find-internet-password -g -a angelo.olivera@10gen.com -s imap.gmail.com -w`"
account-hook  imaps://[angelo.olivera@10gen.com]@imap.gmail.com 'set imap_user=angelo.olivera@10gen.com imap_pass="`/usr/bin/security -q find-internet-password -g -a angelo.olivera@10gen.com -s imap.gmail.com -w`"
account-hook	imaps://[angelo.olivera@10gen.com]@imap.gmail.com	'set smtp_url=smtp://[angelo.olivera@10gen.com]@smtp.gmail.com:587 smtp_pass="`/usr/bin/security -q find-internet-password -g -a aolivera@gmail.com -s imap.gmail.com -w`"
#set folder=imaps://angelo.olivera@imap.gmail.com/

